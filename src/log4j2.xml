<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="3">

    <appenders>
        <File name="FILE" fileName="logs/Facultative.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>

    </appenders>

    <loggers>
        <root level="warn">
            <appender-ref ref="FILE"/>
        </root>
    </loggers>

</configuration>